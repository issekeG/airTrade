{% extends 'base.html.twig' %}
{% block header %}
{% endblock %}
{% block sidebar %}
{% endblock %}
{% block main %}
    <main>
        <div class="container">

            <section class="section register d-flex flex-column justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5 col-md-6 d-flex flex-column justify-content-center">

                            <div class="d-flex justify-content-center py-4">
                                <a href="" class="logo d-flex align-items-center w-auto">
                                    <span class="d-none d-lg-block">AirTradeLogoIci</span>
                                </a>
                            </div><!-- End Logo -->

                            <div class="d-flex justify-content-center py-2">
                                <h3>Changer le mot de passe</h3>
                            </div>

                            <div class="card mb-3">

                                <div class="card-body mt-4">

                                    {{ form_start(resetForm) }}

                                    <div class="form-group">
                                        <div class="form-floating mb-3">
                                            {{ form_widget(resetForm.plainPassword.first, {
                                                'attr': {
                                                    'class': 'form-control',
                                                }
                                            }) }}
                                            <label for="change_password_form_plainPassword_first">Nouveau mot de passe</label>
                                        </div>

                                        {{ form_errors(resetForm.plainPassword.first) }}
                                    </div>

                                    <div class="form-group">
                                        <div class="form-floating mb-3">
                                            {{ form_widget(resetForm.plainPassword.second, {
                                                'attr': {
                                                    'class': 'form-control',
                                                }
                                            }) }}
                                            <label for="change_password_form_plainPassword_second">Répéter le mot de passe</label>
                                        </div>

                                        {{ form_errors(resetForm.plainPassword.second) }}
                                    </div>

                                    <div class="text-center">
                                        <small>En cliquant sur "Sauvegarder", vous acceptez d'être lié par nos Conditions d'utilisation et notre Politique de confidentialité.

                                        </small>
                                    </div>
                                    <hr>
                                    <button class="btn btn-primary w-100 border-0" type="submit" style="background-color: #07182e;">Sauvegarder</button>

                                    {{ form_end(resetForm) }}
                                    <hr>
                                    <a href="{{ path("app_login") }}"> <small>Retour à la page de connexion</small></a>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main><!-- End #main -->
{% endblock %}

{% block footer %}
{% endblock %}
