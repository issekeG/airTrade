{% extends 'base.html.twig' %}

{% block main %}
    <main id="main" class="main">

        <section class="section dashboard">
            <div class="row">

                <!-- Left side columns -->

                <div class="col-lg-8">
                    {% block sideColumns %}
                    <div class="card mb-3">

                        <div class="card-body">
                            <div class="accordion accordion-flush" id="accordionFlushExample">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                            Saisissez les informations sur l'avion
                                        </button>
                                    </h2>
                                    <div id="flush-collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionFlushExample">
                                        <div class="accordion-body">
                                            {{ include('aircraft/_form.html.twig') }}
                                        </div>
                                        <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                                            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 1%">0%</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ encore_entry_script_tags('ckeditor') }}
                        </div>
                    </div>

                    {% endblock %}
                </div><!-- End Left side columns -->


                <!-- Right side columns -->
                {% block rightColumns %}
                    <div class="col-lg-4">

                        <!-- Budget Publicité -->
                        <div class="card">

                            <div class="card-body pb-0">
                                <h5 class="card-title">Publicité</h5>

                                <div id="budgetChart" style="min-height: 400px;" class="echart"></div>

                            </div>
                        </div><!-- End BBudget Publicité  -->


                    </div>
                {% endblock %}

            </div>
        </section>

    </main>
{% endblock %}
