<div class="modal fade" id="categoryFilterModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Filtrer par catégorie</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <fieldset>
                    <legend class="visually-hidden">Filtrage par catégorie</legend>

                    {# Champ de recherche (optionnel) #}
                    <div class="mb-3">
                        <input type="text" class="form-control" id="categorySearch" placeholder="Rechercher une catégorie...">
                    </div>

                    <div class="all-options-container" style="max-height: 70vh; overflow-y: auto;">
                        <div class="row">
                            {% for category in categories|batch((categories|length/2)|round(0, 'ceil')) %}
                                <div class="col-md-6">
                                    {% for item in category %}
                                        <div class="form-check mb-2">
                                            <input class="form-check-input category-form-check-input category-filter"
                                                   type="checkbox"
                                                   id="category-{{ item.id }}"
                                                   name="categories[]"
                                                   value="{{ item.id }}"
                                                   data-bs-auto-close="outside">
                                            <label class="form-check-label" for="category-{{ item.id }}">
                                                {{ item.name }}
                                            </label>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="applyCategoryFilters">Appliquer</button>
            </div>
        </div>
    </div>
</div>