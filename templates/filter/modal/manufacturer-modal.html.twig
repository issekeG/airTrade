<div class="modal fade" id="manufacturerFilterModal" tabindex="-1" aria-labelledby="manufacturerFilterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg rounded-4">

            <div class="modal-header text-white rounded-top-4 px-4 py-3" style="background-color: var(--primary-color)">
                <h5 class="modal-title d-flex align-items-center gap-2" id="manufacturerFilterModalLabel">
                    <i class="bi bi-tools"></i> Filtrer par constructeur
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>

            <div class="modal-body px-4 py-3">
                <fieldset>
                    <legend class="visually-hidden">Filtrage par constructeur</legend>

                    <div class="all-options-container" style="max-height: 65vh; overflow-y: auto;">
                        <div class="row g-4">
                            {% for manufacturer in manufacturers|batch((manufacturers|length / 2)|round(0, 'ceil')) %}
                                <div class="col-md-6">
                                    {% for item in manufacturer %}
                                        <div class="form-check mb-3">
                                            <input class="form-check-input manufacturer-form-check-input manufacturer-filter"
                                                   type="checkbox"
                                                   id="manufacturer-{{ item.id }}"
                                                   name="manufacturers[]"
                                                   value="{{ item.id }}"
                                                   data-bs-auto-close="outside">
                                            <label class="form-check-label" for="manufacturer-{{ item.id }}">
                                                <small>{{ item.name }}</small>
                                            </label>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="modal-footer justify-content-between px-4 py-3 bg-light rounded-bottom-4">
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Annuler
                    </button>
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn text-white" data-bs-dismiss="modal" style="background-color: var(--primary-color)" id="applyManufacturerFilters">
                        <i class="bi bi-check2-circle me-1"></i> Sauvegarder les selections
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>
