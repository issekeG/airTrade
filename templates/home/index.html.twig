{% extends 'base.html.twig' %}

{% block sidebar %}{% endblock %}

{% block main %}
    <main id="aviation-homepage" class="main bg-light">
        <section class="d-flex flex-column align-items-center justify-content-center" style="min-height: 80vh;">
            <div class="container text-center px-0" style="max-width: 800px; margin-top: 15vh;">
                <!-- Search Bar -->
                <div class="search-filter w-100">
                    <h4 class="h3 my-5 bold" style="color:#1A0B8C;">{{ 'homepage.title'|trans }}</h4>
                    {{ form_start(search_form, {method: 'GET', 'attr': { 'class': 'aviation-search-form', action: path('app_aircraft_main_search')}}) }}
                    <div class="input-group aviation-search-group shadow-sm">
                        {{ form_widget(search_form.aircraftCategory) }}
                        <div class="vr mx-1 d-none d-md-flex"></div>
                        {{ form_widget(search_form.aircraftManufacturer) }}
                        <div class="vr mx-1 d-none d-md-flex"></div>
                        {{ form_widget(search_form.model) }}
                        <button class="btn submit" type="submit" style="width: 46px;">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                    {{ form_end(search_form) }}
                </div>

                <!-- CTA Buttons -->
                <div class="my-5">
                    <a class="btn btn-light border mx-1 px-3 py-2" href="{{ path('app_aircraft_index') }}">
                        {{ 'cta.explore'|trans }}
                    </a>
                    <a class="btn mx-1 px-3 py-2 text-white" href="{{ path('app_aircraft_new') }}" style="background-color:#1A0B8C;">
                        <i class="fas fa-plus-circle me-1"></i> {{ 'cta.sell'|trans }}
                    </a>
                </div>
            </div>

            <!-- Categories Section -->
            <div class="container">
                <div class="text-center mb-5">
                    <h2 class="h4 fw-normal mb-2">{{ 'browse.title'|trans }}</h2>
                    <p class="text-muted small">{{ 'browse.subtitle'|trans }}</p>
                </div>

                <div class="row g-3 justify-content-center">
                    {% set categories = [
                        {name: 'jet_aircraft', image: 'jet_aircraft_bleu.png'},
                        {name: 'turboprop_aircraft', image: 'turboprop_aircraft_bleu.png'},
                        {name: 'piston_single_aircraft', image: 'piston_single_aircraft_bleu.png'},
                        {name: 'piston_twin_aircraft', image: 'piston_twin_aircraft_bleu.png'},
                        {name: 'light_sport', image: 'light_sport_aircraft_bleu.png'},
                        {name: 'experimental_homebuilt_aircraft', image: 'experimental_homebuilt_aircraft_bleu.png'},
                        {name: 'piston_agricultural_aircraft', image: 'piston_agricultural_aircraft_bleu.png'},
                        {name: 'piston_amphibious_flatplanes', image: 'piston_amphibious_flatplanes_bleu.png'},
                        {name: 'piston_helicopters', image: 'piston_helicopters_bleu.png'},
                        {name: 'piston_military_aircraft', image: 'piston_military_aircraft_bleu.png'},
                        {name: 'turbine_agricultural_aircraft', image: 'turbine_agricultural_aircraft_bleu.png'},
                        {name: 'turbine_helicopters', image: 'turbine_helicopters_bleu.png'},
                        {name: 'turbine_military_aircraft', image: 'turbine_military_aircraft_bleu.png'},
                        {name: 'turbine_amphibious_floatplane', image: 'turbune_amphibious_floatplane_bleu.png'}
                    ] %}

                    {% for category in categories %}
                        <div class="col-6 col-md-4 col-lg-2">
                            <a href="{{ path('app_aircraft_by_category', {'categoryName': category.name}) }}"
                               class="text-decoration-none text-dark">
                                <div class="card h-100 border-0 bg-transparent hover-scale transition">
                                    <div class="card-body text-center p-2">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-0 mx-auto"
                                             style="width: 80px; height: 80px;">
                                            <img src="{{ asset('images/aircraft_categories/icons/' ~ category.image) }}"
                                                 alt="{{ ('categories.' ~ category.name)|trans }}"
                                                 style="max-height: 40px;" class="img-fluid">
                                        </div>
                                        <h6 class="mb-0 small fw-normal">{{ ('categories.' ~ category.name)|trans }}</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        <!-- Listings Section -->
        <section class="listings-section py-2 bg-light">
            <div class="container">
                <div class="text-center my-5">
                    <h2 class="fw-bold">{{ 'listings.title'|trans }}</h2>
                    <p class="text-muted">{{ 'listings.subtitle'|trans }}</p>
                </div>

                <div class="row g-4">
                    {% for aircraft in allAirCrafts %}
                        <div class="col-md-4 col-lg-3">
                            <div class="aircraft-card" style="border: 2px solid #0d6efd;">
                                <div class="aircraft-image">
                                    {% if aircraft.airCraftImages|length > 0 %}
                                        <img src="{{ asset('uploads/images/aircraft/' ~ aircraft.airCraftImages[0].image) }}"
                                             alt="{{ aircraft.aircraftManufacturer.name }} {{ aircraft.model }}">
                                    {% endif %}
                                </div>
                                <div class="aircraft-details">
                                    <div>
                                        <span class="aircraft-type">{{ aircraft.aircraftCategory.name }}</span>
                                    </div>
                                    <small class="text-primary bold">
                                        <span>{{ aircraft.yearOfManufacture }}</span>
                                        {{ aircraft.aircraftManufacturer.name }} {{ aircraft.model }}
                                    </small>
                                    <p class="aircraft-location">
                                        {{ 'location'|trans }} {{ aircraft.city }}, {{ aircraft.country }}
                                    </p>
                                    <div class="aircraft-price">{{ 'price'|trans }}â‚¬{{ aircraft.price|number_format(0, ',', ' ') }}</div>
                                    <div class="bg-white border-top-0 py-0">
                                        <div class="d-grid">
                                            <a href="{{ path('app_aircraft_show', {'slug': aircraft.slug}) }}"
                                               class="btn btn-outline-primary">
                                                {{ 'cta.details'|trans }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        <!-- Blog Section -->
        <section class="blog-section py-5 bg-light">
            <div class="container">
                <div class="text-center mb-5">
                    <h2 class="fw-bold">{{ 'blog.title'|trans }}</h2>
                    <p class="text-muted">{{ 'blog.subtitle'|trans }}</p>
                </div>
                <div class="row g-4">
                    <!-- Blog content here -->
                </div>
            </div>
        </section>
    </main>

    <!-- Styles remain unchanged -->
    <style>
        .aviation-search-form { max-width: 800px; margin: 0 auto; }
        .aviation-search-group { border-radius: 50px; overflow: hidden; border: 1px solid #dfe1e5; transition: all 0.3s ease; }
        .aviation-search-group:hover { box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); border-color: rgba(223, 225, 229, 0.8); }
        /* ... (keep all your existing styles) ... */
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            $('.select2').select2({
                width: 'resolve',
                theme: 'bootstrap-5', // Si tu utilises Bootstrap 5
                placeholder: function(){
                    return $(this).attr('placeholder');
                }
            });
        });
    </script>

{% endblock %}

{% block footer %}
    <footer class="text-white pt-5 pb-4 mt-5" style="background-color: #1A0B8C;">
        <div class="container">
            <div class="row">
                <!-- Logo et Description -->
                <div class="col-md-4 mb-4">
                    <img src="{{ asset('images/your-logo.png') }}" alt="Logo" style="height: 50px;" class="mb-3">
                    <p class="text-white">
                        <small>
                            {{ 'footer.description'|trans }}
                        </small>
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <!-- Liens utiles -->
                <div class="col-md-2 mb-4">
                    <h6 class="text-uppercase fw-bold mb-3">{{ 'footer.navigation'|trans }}</h6>
                    <ul class="list-unstyled">
                        <li><a href="" class="text-white text-decoration-none">{{ 'footer.home'|trans }}</a></li>
                        <li><a href="" class="text-white text-decoration-none">{{ 'footer.blog'|trans }}</a></li>
                        <li><a href="" class="text-white text-decoration-none">{{ 'footer.contact'|trans }}</a></li>
                        <li><a href="" class="text-white text-decoration-none">{{ 'footer.about'|trans }}</a></li>
                    </ul>
                </div>

                <!-- CatÃ©gories -->
                <div class="col-md-3 mb-4">
                    <h6 class="text-uppercase fw-bold mb-3">{{ 'footer.categories'|trans }}</h6>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('app_aircraft_by_category', {'categoryName':'Jet Aircraft'}) }}" class="text-white text-decoration-none">{{ 'footer.category.jet'|trans }}</a></li>
                        <li><a href="{{ path('app_aircraft_by_category', {'categoryName':'Turboprop Aircraft'}) }}" class="text-white text-decoration-none">{{ 'footer.category.turboprop'|trans }}</a></li>
                        <li><a href="{{ path('app_aircraft_by_category', {'categoryName':'Piston Single'}) }}" class="text-white text-decoration-none">{{ 'footer.category.piston_single'|trans }}</a></li>
                        <li><a href="{{ path('app_aircraft_by_category', {'categoryName':'Experimental'}) }}" class="text-white text-decoration-none">{{ 'footer.category.experimental'|trans }}</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div class="col-md-3 mb-4">
                    <h6 class="text-uppercase fw-bold mb-3">{{ 'footer.newsletter'|trans }}</h6>
                    <p class="text-white">{{ 'footer.newsletter_description'|trans }}</p>
                    <form>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="{{ 'footer.email_placeholder'|trans }}">
                            <button class="btn btn-primary" type="submit"><i class="fas fa-paper-plane"></i></button>
                        </div>
                    </form>
                </div>
            </div>

            <hr class="border-secondary">

            <!-- Footer bottom -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <p class="mb-2 mb-md-0 text-white">&copy; {{ "now"|date("Y") }} {{ 'footer.copyright'|trans }}</p>
                <div>
                    <a href="#" class="text-white me-3 text-decoration-none">{{ 'footer.legal_notice'|trans }}</a>
                    <a href="#" class="text-white text-decoration-none">{{ 'footer.privacy_policy'|trans }}</a>
                </div>
            </div>
        </div>
    </footer>


{% endblock %}


