{% extends 'base.html.twig' %}

{% block title %}NewLetter index{% endblock %}

{% block body %}
    <h1>NewLetter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for new_letter in new_letters %}
            <tr>
                <td>{{ new_letter.id }}</td>
                <td>{{ new_letter.mail }}</td>
                <td>
                    <a href="{{ path('app_new_letter_show', {'id': new_letter.id}) }}">show</a>
                    <a href="{{ path('app_new_letter_edit', {'id': new_letter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_new_letter_new') }}">Create new</a>
{% endblock %}
