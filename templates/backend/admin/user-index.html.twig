{% extends 'backend/base.html.twig' %}

{% block main %}
    <main id="main" class="main">

        <section class="section dashboard">
            {% block main_content %}
                <div class="row">

                    <!-- Left side columns -->

                    <div class="col-lg-12">
                        {% block sideColumns %}
                            <div class="row">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-5">
                                                {% set firstItemNumber = (users.currentPageNumber - 1) * users.itemNumberPerPage + 1 %}
                                                {% set lastItemNumber = firstItemNumber + users.items|length - 1 %}
                                                <h5 class="card-title">
                                                    <small>
                                                        Liste des utilisateurs active ({{ firstItemNumber }} - {{ lastItemNumber }} sur {{ users.totalItemCount }})
                                                    </small>
                                                </h5>
                                            </div>
                                            <div class=" col-md-4">
                                                <div class="card-title">
                                                    <form class="search-form d-flex align-items-center" method="POST" action="{{ path('app_user_index_verify') }}">

                                                        <div class="input-group input-group-sm mb-3">
                                                            <input type="search" class="form-control" name="search" placeholder="Recherche par pseudo ou email ...." aria-label="Entre le code ...." aria-describedby="user-recherche">
                                                            <button class="btn border border-gray-400" type="submit" id="user-recherche">
                                                                <i class="bi bi-search"></i>
                                                            </button>
                                                        </div>

                                                    </form>
                                                </div>
                                            </div>

                                        </div>

                                        <!-- Table with stripped rows -->
                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th scope="col">Action</th>
                                                <th scope="col">Pseudo</th>
                                                <th scope="col">Prénom</th>
                                                <th scope="col">Nom</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Téléphone</th>
                                                <th scope="col">Date d'inscription</th>
                                                <th scope="col">Role</th>


                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for user in users %}
                                                <tr>
                                                    <td class="gap-2">
                                                        <a href="{{ path('admin_view_user_profile', {'id':user.id, 'page':'ads'}) }}" class="ms-2"><i class="bi bi-eye-fill"></i></a>

                                                        <a href="{{ path('user_profile_luck', {'id':user.id}) }}" class="ms-2">{% if user.IsVerified %} <i class="bi bi-unlock-fill"></i>{% else%} <i class="bi bi-lock-fill"></i>{% endif%} </a>

                                                    </td>
                                                    <td>{{ user.pseudo }}</td>
                                                    <td>{{ user.firstname }}</td>
                                                    <td>{{ user.lastname }}</td>
                                                    <td>{{ user.email }}</td>
                                                    <td>{{ user.telephone }}</td>
                                                    <td>{{ user.createAt | date('d-m-y')}}</td>
                                                    <td>{% for role in  user.roles %} {{ role}} {% endfor %}</td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>
                                        </table>
                                        <!-- End Table with stripped rows -->
                                        <div class="pagination">
                                            {{ knp_pagination_render(users) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endblock %}
                    </div><!-- End Left side columns -->


                </div>
            {% endblock %}
        </section>






    </main>
{% endblock %}





