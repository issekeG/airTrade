{% extends 'backend/base.html.twig' %}

{% block main %}
    <main id="main" class="main">

        <section class="section dashboard">
            {% block main_content %}
                <div class="row">

                    <!-- Left side columns -->

                    <div class="col-lg-12">
                        {% block sideColumns %}
                            <div class="row">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <h5 class="card-title">Liste des constructeurs</h5>
                                            </div>
                                            <div class=" col-md-4">
                                                <div class="card-title">
                                                    <form class="search-form d-flex align-items-center" method="POST" action="#">

                                                        <div class="input-group input-group-sm mb-3">
                                                            <input type="search" class="form-control" placeholder="Recherche avec le code ...." aria-label="Entre le code ...." aria-describedby="admin-school-bouton">
                                                            <button class="btn border border-gray-400" type="submit" id="admin-school-bouton">
                                                                <i class="bi bi-search"></i>
                                                            </button>
                                                        </div>

                                                    </form>
                                                </div>
                                            </div>
                                            <div class="col-md-4 d-flex justify-content-end">
                                                <h5 class="card-title"><a href="{{ path('app_add_user_register') }}"><i class="bi bi-patch-plus-fill"></i> Créer</a></h5>
                                            </div>

                                        </div>

                                        <!-- Table with stripped rows -->
                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th scope="col">Action</th>
                                                <th scope="col">Pseudo</th>
                                                <th scope="col">Prénom</th>
                                                <th scope="col">Nom</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Téléphone</th>
                                                <th scope="col">Date d'inscription</th>
                                                <th scope="col">Role</th>


                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for admin_user in admin_users %}
                                                <tr>
                                                    <td class="gap-2">
                                                        <a href="{{ path('admin_view_user_profile', {'id':admin_user.id, 'page':'ads'}) }}" class="ms-2"><i class="bi bi-eye-fill"></i></a>

                                                        <a href="{{ path('user_profile_luck', {'id':admin_user.id}) }}" class="ms-2">{% if admin_user.IsVerified %} <i class="bi bi-unlock-fill"></i>{% else%} <i class="bi bi-lock-fill"></i>{% endif%} </a>

                                                    </td>
                                                    <td>{{ admin_user.pseudo }}</td>
                                                    <td>{{ admin_user.firstname }}</td>
                                                    <td>{{ admin_user.lastname }}</td>
                                                    <td>{{ admin_user.email }}</td>
                                                    <td>{{ admin_user.telephone }}</td>
                                                    <td>{{ admin_user.createAt | date('d-m-y')}}</td>
                                                    <td>{% for role in  admin_user.roles %} {{ role}} {% endfor %}</td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>
                                        </table>
                                        <!-- End Table with stripped rows -->
                                    </div>
                                </div>
                            </div>
                        {% endblock %}
                    </div><!-- End Left side columns -->


                </div>
            {% endblock %}
        </section>






    </main>
{% endblock %}





