{% extends 'backend/base.html.twig' %}

{% block main %}
    <main id="main" class="main">

        <section class="section dashboard">
            {% block main_content %}
                <div class="row">

                    <!-- Left side columns -->

                    <div class="col-lg-12">
                        {% block sideColumns %}
                            <div class="row">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-5">
                                                {% set firstItemNumber = (aircraft_all.currentPageNumber - 1) * aircraft_all.itemNumberPerPage + 1 %}
                                                {% set lastItemNumber = firstItemNumber + aircraft_all.items|length - 1 %}
                                                <h5 class="card-title">
                                                    <small>
                                                        {{ 'aircraft.list_published'|trans({
                                                            '%first%': firstItemNumber,
                                                            '%last%': lastItemNumber,
                                                            '%total%': aircraft_all.totalItemCount
                                                        }) }}
                                                    </small>
                                                </h5>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="card-title">
                                                    <form class="search-form d-flex align-items-center" method="POST" action="{{ path('app_user_index_verify') }}">
                                                        <div class="input-group input-group-sm mb-3">
                                                            <input
                                                                    type="search"
                                                                    class="form-control"
                                                                    name="search"
                                                                    placeholder="{{ 'aircraft.search_placeholder'|trans }}"
                                                                    aria-label="{{ 'aircraft.search_label'|trans }}"
                                                                    aria-describedby="user-recherche"
                                                            >
                                                            <button class="btn border border-gray-400" type="submit" id="user-recherche">
                                                                <i class="bi bi-search"></i>
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th scope="col">{{ 'common.action'|trans }}</th>
                                                <th scope="col">{{ 'aircraft.category'|trans }}</th>
                                                <th scope="col">{{ 'aircraft.manufacturer'|trans }}</th>
                                                <th scope="col">{{ 'aircraft.model'|trans }}</th>
                                                <th scope="col">{{ 'aircraft.price'|trans }}</th>
                                                <th scope="col">{{ 'aircraft.total_hours'|trans }}</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for aircraft in aircraft_all %}
                                                <tr>
                                                    <td class="gap-2">
                                                        <a href="{{ path('app_admin_aircraft_show', {'slug': aircraft.slug}) }}" class="ms-2">
                                                            <i class="bi bi-eye-fill"></i>
                                                        </a>
                                                    </td>
                                                    <td>{{ aircraft.aircraftCategory.name }}</td>
                                                    <td>{{ aircraft.aircraftManufacturer.name }}</td>
                                                    <td>{{ aircraft.model }}</td>
                                                    <td>{{ aircraft.price }}</td>
                                                    <td>{{ aircraft.totalHours }}</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                        <div class="pagination">
                                            {{ knp_pagination_render(aircraft_all) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endblock %}

                    </div><!-- End Left side columns -->


                </div>
            {% endblock %}
        </section>






    </main>
{% endblock %}





