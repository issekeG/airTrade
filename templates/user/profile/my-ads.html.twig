{% extends 'user/profile/users-profile.html.twig' %}
{% block ads_block %}
    <li class="nav-item bx-border-circle">
        <a class="nav-link collapsed bg-primary text-white" href="{{ path('user_profile',{'id':app.user.id, 'page':'ads'}) }}">
            <i class="bi bi-megaphone text-white"></i><span>Mes annonces</span>
        </a>
    </li>
{% endblock %}

{% block content %}
    <div class="card-body pt-3">
        <!-- Bordered Tabs -->
        <ul class="nav nav-tabs nav-tabs-bordered">

            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab">Liste de mes annonces</button>
            </li>
            <li class="nav-item" href="{{ path('app_aircraft_new') }}">
                    <a href="{{ path('app_aircraft_new') }}" class="btn nav-link" >Publier une annonce</a>
            </li>

        </ul>
        <div class="tab-content pt-2">
            <div class="row">
            {% for aircraft in annonces %}
                <div class="col-md-4 col-lg-3">
                    <div class="aircraft-card">
                        <div class="d-flex justify-content-between bg-primary">


                            <a href="" class="card-badge bg-primary"><i class="bi bi-pencil-square"></i></a>
                            <a href="" class="card-delete-badge bg-danger"><i class="bi bi-trash-fill"></i></a>


                        </div>
                        <div class="aircraft-image bg-danger">
                            {% if aircraft.airCraftImages|length > 0 %}
                                <img src="{{ asset('uploads/images/aircraft/' ~ aircraft.airCraftImages[0].image) }}"
                                     alt="{{ aircraft.aircraftManufacturer.name }} {{ aircraft.model }}">
                            {% endif %}
                        </div>
                        <div class="aircraft-details">

                            <div>
                                <span class="aircraft-type">{{ aircraft.aircraftCategory.name }}</span>
                            </div>
                            <small class="text-primary bold"><span>{{ aircraft.yearOfManufacture }}</span>{{ aircraft.aircraftManufacturer.name }} {{ aircraft.model }}</small>
                            <p class="aircraft-location">Location : {{ aircraft.city }},  {{ aircraft.country }}</p>
                            <div class="aircraft-price">â‚¬{{ aircraft.price }}</div>
                            <div class=" bg-white border-top-0 py-0">
                                <div class="d-grid">
                                    <a href="{{ path('app_aircraft_show', {'slug':aircraft.slug}) }}" class="btn btn-outline-primary">Voir les details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>


        </div>
        <!-- End Bordered Tabs -->

    </div>
{% endblock %}