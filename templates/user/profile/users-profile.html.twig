{% extends 'base.html.twig' %}


{% block sidebar %}
  <aside id="sidebar" class="sidebar">
    <ul class="sidebar-nav" id="sidebar-nav">

      {% block ads_block %}
        <li class="nav-item">
          <a class="nav-link collapsed" href="{{ path('user_profile', {'id': app.user.id, 'page': 'ads'}) }}">
            <i class="bi bi-megaphone"></i><span>{{ 'sidebar.my_ads'|trans }}</span>
          </a>
        </li>
      {% endblock %}

      {% block ads_favoris %}
        <li class="nav-item">
          <a class="nav-link collapsed" href="{{ path('user_profile', {'id': app.user.id, 'page': 'ads'}) }}">
            <i class="bi bi-heart"></i><span>{{ 'sidebar.favorites'|trans }}</span>
          </a>
        </li>
      {% endblock %}

      {% block ads_details %}
        <li class="nav-item">
          <a class="nav-link collapsed" href="{{ path('user_profile', {'id': app.user.id, 'page': 'details'}) }}">
            <i class="bi bi-person-circle"></i><span>{{ 'sidebar.account_details'|trans }}</span>
          </a>
        </li>
      {% endblock %}

      {% block ads_infos %}
        <li class="nav-item">
          <a class="nav-link collapsed" href="{{ path('user_profile', {'id': app.user.id, 'page': 'infos'}) }}">
            <i class="bi bi-pencil-square"></i><span>{{ 'sidebar.edit_info'|trans }}</span>
          </a>
        </li>
      {% endblock %}

      {% block ads_password %}
        <li class="nav-item">
          <a class="nav-link collapsed" href="{{ path('user_profile', {'id': app.user.id, 'page': 'password'}) }}">
            <i class="bi bi-shield-lock"></i><span>{{ 'sidebar.change_password'|trans }}</span>
          </a>
        </li>
      {% endblock %}



      <li class="nav-heading">{{ 'sidebar.pages'|trans }}</li>

      <li class="nav-item">
        <a class="nav-link collapsed" href="{{ path('app_logout') }}">
          <i class="bi bi-door-open"></i>
          <span>{{ 'sidebar.logout'|trans }}</span>
        </a>
      </li>
    </ul>
  </aside>
{% endblock %}

{% block main %}
  <main id="main" class="main">
    <section class="section profile">
      <div class="row">
        <div class="col-xl-12">
          <div class="card">
            {% block content %}
              <div class="card-body pt-3">
                <ul class="nav nav-tabs nav-tabs-bordered">
                  <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab">{{ 'profile.my_ads'|trans }}</button>
                  </li>
                </ul>

                <div class="tab-content pt-2">
                  <div class="tab-pane fade show active profile-overview" id="profile-overview">
                    <h5 class="card-title">{{ 'profile.my_info'|trans }}</h5>

                    <div class="row">
                      <div class="col-lg-3 col-md-4 label ">{{ 'profile.username'|trans }}</div>
                      <div class="col-lg-9 col-md-8">{{ user.pseudo }}</div>
                    </div>
                    <div class="row">
                      <div class="col-lg-3 col-md-4 label">{{ 'profile.firstname'|trans }}</div>
                      <div class="col-lg-9 col-md-8">{{ user.firstname }}</div>
                    </div>
                    <div class="row">
                      <div class="col-lg-3 col-md-4 label">{{ 'profile.phone'|trans }}</div>
                      <div class="col-lg-9 col-md-8">{{ user.telephone }}</div>
                    </div>
                    <div class="row">
                      <div class="col-lg-3 col-md-4 label">{{ 'profile.email'|trans }}</div>
                      <div class="col-lg-9 col-md-8">{{ user.email }}</div>
                    </div>
                    <div class="row">
                      <div class="col-lg-3 col-md-4 label">{{ 'profile.country'|trans }}</div>
                      <div class="col-lg-9 col-md-8">{{ user.country }}</div>
                    </div>
                    <div class="row">
                      <div class="col-lg-3 col-md-4 label">{{ 'profile.password'|trans }}</div>
                      <div class="col-lg-9 col-md-8">************</div>
                    </div>
                  </div>
                </div>
              </div>
            {% endblock %}
          </div>
        </div>
      </div>
    </section>
  </main>
{% endblock %}


{% block footer %}
{% endblock %}